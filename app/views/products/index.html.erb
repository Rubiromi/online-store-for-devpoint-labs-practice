<%= link_to('Create a new product', new_product_path) %>

<h1>Products Page</h1>

<ul>
  <% @products.each do |product| %>
    <li>
      <%= link_to(product.name, product_path(product.id)) %>
      <!-- <a href="/products/<%= product.id %>"> <%= product.name %></a> -->
      <%= number_to_currency(product.price) %>
    </li>
  <% end %>
</ul>
